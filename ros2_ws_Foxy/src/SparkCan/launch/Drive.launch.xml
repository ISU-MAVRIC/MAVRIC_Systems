<?xml version="1.0"?>
<launch>
    <!-- Declare launch arguments -->
    <arg name="driveMode" default="false" description="Enable drive mode"/>
    <arg name="scienceMode" default="false" description="Enable science mode"/>
    <arg name="autoMode" default="false" description="Enable auto mode"/>

    <!-- Drivetrain_Control Node for regular mode -->
    <node name="Drivetrain_Control" 
          package="SparkCan" 
          executable="SparkCAN_Drive_Train" 
          output="screen" 
          respawn="true">
        <remap from="Drive_Train" to="Drive/Drive_Command"/>
        <remap from="Steer_Train" to="Drive/Steer_Command"/>
        <condition>$(not var scienceMode)</condition>
    </node>

    <!-- Scale_Startups Node for drive mode -->
    <node name="Scale_Startups_Drive" 
          package="SparkCan" 
          executable="Scale_Startups" 
          output="screen">
        <parameter name="Drive_Sens" value="1.0"/>
        <parameter name="ShoulderRot" value="0.25"/>
        <parameter name="ShoulderPitch" value="0.75"/>
        <parameter name="ElbowPitch" value="0.75"/>
        <parameter name="WristPitch" value="0.3"/>
        <parameter name="WristRot" value="0.75"/>
        <condition>$(var driveMode)</condition>
    </node>

    <!-- Similar corrections needed for other nodes -->
</launch>